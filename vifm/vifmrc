colorscheme solarized
only

set shell=/bin/sh
set vicmd=nvim

set incsearch
set ignorecase
set smartcase
set nohlsearch

fileviewer * xdg-open

noremap e :edit<cr>
noremap é /
noremap è :
noremap à ZZ
noremap À ZZ
noremap <silent> É :nohlsearch<cr><c-l>
noremap <c-t> =

nnoremap i cw<c-a>
nnoremap a cw
nnoremap cc cw<c-u>
vnoremap c :rename<cr>

noremap s :shell<cr>

command thumb sxiv . -t
filetype * {use xdg-open} xdg-open

mark S ~/scripts
mark d ~/Documents
mark h ~
mark m ~/Music
mark s ~/sandbox
mark v ~/Videos
mark w ~/Pictures/wallpapers
