pcm.dmix0 {
    type dmix
    ipc_key 673138
    ipc_key_add_uid false   # let multiple users share
    ipc_perm 0666           # IPC permissions for multi-user sharing (octal, default 0600)

    slave {
      pcm {
        type hw;
        card DAC;
      }

      buffer_size 16384
      buffer_time 320000
      period_size 4096
      period_time 80000
      rate 128000
    }

    bindings {
      0 0
      1 1
    }
}

# 'dsp0' is espected by OSS emulation etc.
pcm.dsp0 {
    type plug
    slave.pcm "dmix0"
}

ctl.dsp0 {
    type hw
    card 0
}

pcm.!default {
    type plug
    slave.pcm "dmix0"
}

ctl.!default {
    type hw
    card 0
}
