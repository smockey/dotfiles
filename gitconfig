[user]
  name = Thomas Larrieu
  email = thomas.larrieu@gmail.com
[credential]
  helper = cache
[color]
  ui = auto
  status = auto
  diff = auto
[push]
  default = current
[difftool]
  prompt = true
[difftool.nvim]
  cmd = nvim -d $LOCAL $REMOTE
[diff]
  tool = nvim
[core]
  editor = nvim
  excludesFile = ~/.gitignore
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lgs = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --stat
  lgsa = "!f() { git lgs --author=$1; }; f"
  co = checkout
  br = branch
  ci = commit
  st = status
  ft = fetch
  wtf = "!cat ~/.gitconfig"
