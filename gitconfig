[user]
	name = Thomas Larrieu
	email = thomas.larrieu@gmail.com
[credential]
	helper = cache
[color]
	ui = auto
	status = auto
	diff = auto
[push]
	default = current
[difftool]
	prompt = true
[difftool.nvim]
	cmd = nvim -d $LOCAL $REMOTE
[diff]
	tool = nvim
[core]
	editor = nvim
	excludesFile = /home/tlarrieu/.gitignore
[alias]
	bd = "!git branch --no-contains master --format='%(refname:short)' --merged master | xargs --no-run-if-empty git branch -d"
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	d = diff
	ds = diff --staged
	ft = fetch
	lc = log --merges
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lga = log --all  --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s = status
	sh = show -s --pretty=format:'%Cred%h %C(blue)(^ %p)%C(yellow)%d%n%C(bold blue)<%an>%Creset %Cgreen(%cr) %Creset%Creset: %s%Creset%+b'
	sl = stash list -p
	st = stash
	sync = fetch --all --prune --tags
	wtf = "!cat ~/.gitconfig"
