#!/bin/bash

LAUNCHER='rofi -dmenu -i -p power:'
# OPTIONS="Logout\nLock\nRestart\nShutdown\nSuspend"
OPTIONS="Lock\nRestart\nShutdown\nSuspend"

function lock {
  i3lock  -f -n -i $HOME/Pictures/lock &
}

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]; then
  case $option in
    # Logout)
    #   echo "awesome.quit()" | awesome-client
    #   ;;
    Lock)
      lock
      ;;
    Restart)
      systemctl reboot
      ;;
    Shutdown)
      systemctl poweroff
      ;;
    Suspend)
      lock
      systemctl suspend
      ;;
    *)
      ;;
  esac
fi
