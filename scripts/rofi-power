#!/bin/bash

LAUNCHER='rofi -dmenu -i -p power:'
# OPTIONS="Logout\nLock\nRestart\nShutdown\nSuspend"
OPTIONS="Lock\nRestart\nShutdown\nSuspend"

function lock {
  # i3lock  -f -n -i $HOME/Pictures/lock &
  TMPBG=/tmp/screen.png
  LOCK=$HOME/scripts/lock.png
  RES=$(xrandr | grep 'current' | sed -E 's/.*current\s([0-9]+)\sx\s([0-9]+).*/\1x\2/')

  ffmpeg -y -f x11grab \
    -video_size $RES \
    -i $DISPLAY \
    -i $LOCK \
    -filter_complex "boxblur=8,overlay=(main_w-overlay_w)/2:(main_h-overlay_h)/2" \
    -vframes 1 $TMPBG \
    -loglevel quiet

  i3lock -i $TMPBG -r 242 -o 0.1
  rm $TMPBG
}

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]; then
  case $option in
    # Logout)
    #   echo "awesome.quit()" | awesome-client
    #   ;;
    Lock)
      lock
      ;;
    Restart)
      systemctl reboot
      ;;
    Shutdown)
      systemctl poweroff
      ;;
    Suspend)
      lock
      systemctl suspend
      ;;
    *)
      ;;
  esac
fi
