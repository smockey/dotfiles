# vim: ft=taskrc

# -- General config ------------------------------------------------------------
data.location=~/.task
search.case.sensitive=no

include ~/.task/taskd

context.home=-@work
context.work=-@home

# -- Look & feel ---------------------------------------------------------------
include /usr/share/doc/task/rc/solarized-light-256.theme

row.padding=10
column.padding=3

color.tagged=
color.active=green
color.scheduled=yellow
color.tag.inbox=color14 bold
color.tag.someday=cyan
color.uda.priority.H=
color.uda.priority.M=
color.uda.priority.L=

# -- Urgency -------------------------------------------------------------------
urgency.annotations.coefficient=0
urgency.project.coefficient=0
urgency.scheduled.coefficient=0
urgency.tags.coefficient=0

urgency.uda.priority.L.coefficient=-1
urgency.uda.priority.M.coefficient=5
urgency.uda.priority.S.coefficient=15

urgency.uda.tag.inbox.coefficient=0
urgency.uda.tag.someday.coefficient=-100

urgency.uda.tag.@home.coefficient=-1
urgency.uda.tag.@work.coefficient=5

# -- Aliases -------------------------------------------------------------------

alias.burndown=burndown.daily

# -- Reports -------------------------------------------------------------------
report.all.columns=id,status.short,uuid.short,start.active,entry.age,depends.indicator,priority,project,tags,recur.indicator,wait.remaining,scheduled,due,until.remaining,description
report.all.labels=ID,St,UUID,A,Age,D,P,Project,Tags,R,Wait,Scheduled,Due,Until,Description
report.all.filter=status.not:deleted status.not:completed project.not:routine -someday
report.all.sort=scheduled,urgency-,status-,tags

report.waiting.columns=id,start.active,entry.age,depends.indicator,priority,project,tags,wait,wait.remaining,scheduled,due,until,description
report.waiting.description=Waiting (hidden) tasks
report.waiting.filter=+WAITING -someday
report.waiting.labels=ID,A,Age,D,P,Project,Tags,Wait,Remaining,Sched,Due,Until,Description
report.waiting.sort=due+,wait+,entry+

report.in.columns=id,tags,description,project,scheduled,due.relative,urgency
report.in.labels=ID,Tags,Description,Project,Scheduled,Due,Urg.
report.in.description=Inbox
report.in.filter=status:pending +inbox

report.next.columns=id,tags,priority,description,project,due.relative,urgency
report.next.labels=ID,Tags,P,Description,Project,Due,Urg.
report.next.description=Today's tasks
report.next.filter=(status:pending scheduled.before:tomorrow) or +ACTIVE
report.next.sort=start,urgency-,description

report.tomorrow.columns=id,tags,priority,description,project,due.relative,urgency
report.tomorrow.labels=ID,Tags,P,Description,Project,Due,Urg.
report.tomorrow.filter=status:pending scheduled.before:1d
report.tomorrow.description=Tomorrow's tasks
report.tomorrow.sort=start,urgency-,description

report.week.columns=id,tags,priority,description,project,scheduled,due.relative,urgency
report.week.labels=ID,Tags,P,Description,Project,Scheduled,Due,Urg.
report.week.filter=status:pending scheduled.before:eow
report.week.description=This week's tasks
report.week.sort=start,scheduled,urgency-,description

report.planner.columns=id,tags,priority,description,project,scheduled,due.relative,urgency
report.planner.labels=ID,Tags,P,Description,Project,Scheduled,Due,Urg.
report.planner.description=Planner
report.planner.filter=status:pending (scheduled: or scheduled.after:eow) -inbox -daily project.not:routine
report.planner.sort=scheduled,urgency-,description

report.someday.columns=id,tags,description,project,scheduled,due.relative,urgency
report.someday.labels=ID,Tags,Description,Project,Scheduled,Due,Urg.
report.someday.description=Someday/Maybe
report.someday.filter=+someday

report.daily.columns=id,description
report.daily.labels=ID,Description
report.daily.description=Daily manager
report.daily.filter=status:pending +daily

report.finished.columns=id,tags,description,project
report.finished.labels=ID,Tags,Description,Project
report.finished.description=Done
report.finished.filter=status:completed

report.fzf.columns=uuid.short,status.short,depends.indicator,priority,tags,recur.indicator,wait.remaining,scheduled,due,until.remaining,description.count
report.fzf.labels=UUID,S,D,P,Tags,R,Wait,Scheduled,Due,Until,Description
report.fzf.filter=status.not:deleted status.not:completed project.not:routine
report.fzf.sort=scheduled,urgency-

report.routine.columns=id,description
report.routine.labels=ID,Description
report.routine.description=Routine
report.routine.filter=status:pending proj:routine
