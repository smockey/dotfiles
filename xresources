rofi.padding: 250

rofi.color-active: #00ffffff,  COLOR4,         #00ffffff,  COLOR4,     BACKGROUND
rofi.color-normal: #00ffffff,  FOREGROUND,     #00ffffff,  COLOR2,     BACKGROUND
