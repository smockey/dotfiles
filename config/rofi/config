! vim:filetype=xdefaults

! ------------------------------------------------------------------------------
! Overall look
! ------------------------------------------------------------------------------
rofi.font: Inconsolata-g for Powerline 15
rofi.separator-style: none
rofi.hide-scrollbar: true
rofi.fullscreen: true
rofi.padding: 250

! ------------------------------------------------------------------------------
! Colors
! ------------------------------------------------------------------------------
rofi.color-normal: #00ffffff,#002b36,#00ffffff,#859900,#eee8d5
rofi.color-urgent: #00ffffff,#dc322f,#00ffffff,#dc322f,#fdf6e3
rofi.color-active: #00ffffff,#268bd2,#00ffffff,#268bd2,#fdf6e3
rofi.color-window: #B0fdf6e3,#002b36

! ------------------------------------------------------------------------------
! Runner
! ------------------------------------------------------------------------------
rofi.terminal: termite
rofi.ssh-command: {terminal} -e {ssh-client} {host}
rofi.run-shell-command: {terminal} -e {cmd}
rofi.run-command: {cmd}

! ------------------------------------------------------------------------------
! Keyboard
! ------------------------------------------------------------------------------
rofi.kb-clear-line: Control+c
rofi.kb-remove-word-back: Control+w
